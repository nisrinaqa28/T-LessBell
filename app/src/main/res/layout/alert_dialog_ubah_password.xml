<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:id="@+id/layoutDialogUbahPassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layputDialog"
        android:background="@drawable/alert_dialog_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleUbahPasswordDialog"
            android:padding="10dp"
            android:background="@drawable/alert_dialog_title_background"
            android:text="Password Anda Telah Diubah"
            android:fontFamily="@font/signika_negative_semi_bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageUbahPassword"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="40dp"
            android:text="Aplikasi akan di restart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/signika_negative"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/titleUbahPasswordDialog"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOk"
            android:background="@drawable/button_ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageUbahPassword"
            android:layout_marginVertical="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>